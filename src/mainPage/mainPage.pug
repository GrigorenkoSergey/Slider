block includes

block variables
    - 
        var titleName = 'SLIDERS'
        var optionsInputs = ["min", "max", "step", "angle",
            "thumbLeftPos", "thumbRightPos"];
        var optionsCheckbox = [["range", "Диапазон"], ["hintAboveThumb", "Подсказка"]];

block content

    .slider-container1
        .slider1
