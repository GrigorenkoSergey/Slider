            let i = 65;
            let arr = new Array(58).fill(1).map(item => i++);
            let pContent = String.fromCodePoint(...arr);

        p=  pContent 


    .slider-container2
        .slider2
        span A
        .slider5

    .slider-container3
        .imgSprite
        .slider3
    .examples
        .slider-container4
            .slider4
        ul.slider-options
            each val in optionsInputs
                li.slider-options__li= val
                    input.slider-options__input(name = val value = val data-id= "slider4")
            li.slider-options__li_checkbox
                each val in optionsCheckbox
                    label.slider-options__label= val[1]
                        input.slider-options_checkbox(type="checkbox" name = val[0] data-id= "slider4")