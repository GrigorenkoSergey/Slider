extends ../template/template.pug

mixin example(num)
  - let wrapper = "example" + num;
  - let containerName = "slider-container" + num;
  - let slider = "slider" + num

  div(class= wrapper)
    div(class = slider)

block includes

block content
  .examples
    +example(1)
    +example(2)
    +example(3)

  h1 Usage examples
  .usage-examples
    .slider4-container
      .slider4
      -
        let i = 65;
        let arr = new Array(58).fill(1).map(item => i++);
        let pContent = String.fromCodePoint(...arr);

      p.slider4__p=  pContent 

    .slider5-container
      .slider5
      .slider5-container__text A

    .slider6-container
      .slider6
      .imgSprite
